<Page x:Class="Client.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080">

    <Grid Width="Auto" Height="Auto">


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>



        <Grid Background="{StaticResource ContactListBackgroundColorBrush}" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Width="30" Height="30" Style="{x:Null}" Margin="6, 0, 0 ,0"></Button>
                <TextBox Width="190" Tag="Search" Margin="6, 0, 0 ,0"/>
            </StackPanel>




            <ListView Background="Transparent"
                      BorderThickness="0"
                      ItemsSource="{Binding Contacts}" 
                      Grid.Row="1"/>


            <StackPanel
                 Grid.Row="2"
                 Orientation="Horizontal"
                 Background="#303030">

                <Border CornerRadius="25" Width="40" Height="40" Background="White" Margin="10, 0, 0, 0"/>
                <StackPanel VerticalAlignment="Center" Margin="5">
                    <Label Content="UserName"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="13"
                           FontFamily="Poppins"/>
                    <Label Content="Status"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Opacity="0.5"
                           FontFamily="Poppins"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>


            <Border Background="#272727" Grid.ColumnSpan="2">
                <Grid HorizontalAlignment="Stretch" Margin="0">


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel  VerticalAlignment="Center" Margin="5, 0, 5, 0">
                        <Label Content="@UserName"
                               Foreground="White"
                               FontSize="13"
                               FontWeight="SemiBold"/>
                        <Label Content="Last seen 10 minutes ago"
                               Foreground="White"
                               FontSize="13"
                               Opacity="0.5"
                               FontWeight="Normal"/>
                    </StackPanel>
                </Grid>
            </Border>


            <Grid Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Width="30" Height="30" Style="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}"/>
                <Button Grid.Column="2" Width="30" Height="30" Style="{x:Null}"></Button>
                <Button Grid.Column="3" Width="30" Height="30" Style="{x:Null}"></Button>

                <TextBox Grid.Column="1" Tag="Write a message..."
                         BorderThickness="0"
                         FontSize="14"
                         Width="Auto"
                         Height="Auto"/>


            </Grid>

        </Grid>


    </Grid>
</Page>
