<Page x:Class="Client.Views.Pages.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views.Pages"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="HomeView">


    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
    </Page.Resources>

    <Grid  Width="Auto" Height="Auto">


        <Grid.InputBindings>
            <MouseBinding Gesture="LeftClick" Command="{Binding HidePanelCommand}"/>
        </Grid.InputBindings>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Grid Background="{StaticResource UsersListBackgroundColorBrush}" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>

                <Button Style="{x:Null}" 
                        Background="Transparent"
                        Command="{Binding ShowPanelCommand}"
                        BorderThickness="0"
                        Height="25" Width="25">

                    <iconPacks:PackIconMaterialDesign     Kind="Menu"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Width="19"
                                                          Opacity="0.8"
                                                          Grid.Column="5"
                                                          Height="19"
                                                          Foreground="White" />
                </Button>

                <TextBox Width="230"
                         Height="38"
                         Grid.Column="1"
                         Background="#313131"
                         BorderThickness="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="Search"/>

            </Grid>


            <ListBox Background="Transparent"
                         x:Name="UsersListView"
                         BorderThickness="0"
                         ItemsSource="{Binding Users}"
                         ItemContainerStyle="{StaticResource UserCard}"
                         Grid.Row="1">

            </ListBox>

        </Grid>

        <Border Grid.Row="0" Grid.Column="0" Background="#252525" 
                Visibility="{Binding IsPanelVisible, 
                Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <loadingSpinnerControl:LoadingSpinner
            Color="White"
            Width="50"
            Grid.Column="1"
            Height="50"
            Diameter="45"
            IsLoading="{Binding IsLoading}"/>


        <Grid Grid.Column="1">


        </Grid>

    </Grid>


</Page>
