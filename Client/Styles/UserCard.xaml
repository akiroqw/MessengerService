<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    


        <Style x:Key="UserCard" TargetType="ListViewItem">
            
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#292b2f"></Setter>
                </Trigger>
            </Style.Triggers>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            Height="65">

                        <StackPanel Orientation="Horizontal"
                                    Margin="10, 0, 0, 0">

                            <Border Width="40"  Height="40" CornerRadius="25" Background="White"/>

                            <StackPanel>
                                <Label Content="{Binding UserName}" Foreground="White" FontSize="13"/>
                                <Label Content="{Binding LastMessage}" Foreground="White" Opacity="0.5"/>
                            </StackPanel>

                        </StackPanel>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>


</ResourceDictionary>