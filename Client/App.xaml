<Application x:Class="Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Client"
             xmlns:viewModel="clr-namespace:Client.ViewModels"
             xmlns:view="clr-namespace:Client.Views.Pages"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:userControls="clr-namespace:Client.Views.UserControls">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/UserCard.xaml"/>
                <ResourceDictionary Source="Styles/CheckBoxes.xaml"/>
                <ResourceDictionary Source="Styles/TextBoxes.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type TypeName=viewModel:SignUpViewModel}">
                <view:SignUpPage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewModel:UserChatViewModel}">
                <userControls:UserChat/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewModel:SignInViewModel}">
                <view:SignInPage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewModel:HomeViewModel}">
                <view:HomePage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewModel:MainViewModel}">
                <local:MainWindow/>
            </DataTemplate>



        </ResourceDictionary>

    </Application.Resources>
</Application>
